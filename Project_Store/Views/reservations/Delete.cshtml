@model Project_Store.Models.reservation

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<div>
    <h4>Reservacion</h4>
    <hr />
    <table class="striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Cantidad</th>
                <th>Valor Unidad</th>
                <th>Total</th>
                <th>Tipo Reserva</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Html.DisplayFor(model => model.date)</th>
                <th>@Html.DisplayFor(model => model.quantity)</th>
                <th>@Html.DisplayFor(model => model.unit_value)</th>
                <th>@Html.DisplayFor(model => model.total)</th>
                <th>@Html.DisplayFor(model => model.type)</th>
            </tr>
        </tbody>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br />
        <div class="row center">
            <div class="col s12 m12 l12">
                <button class="btn waves-effect waves-light center" type="submit" value="Delete">Eliminar<i class="material-icons right">delete</i></button> |
                @Html.ActionLink("Volver a la Lista", "Index")
            </div>
        </div>
    }
</div>
