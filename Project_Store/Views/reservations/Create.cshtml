@model Project_Store.Models.reservation

@{
    ViewBag.Title = "Create";
}

<h2>Crear</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Reserva</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="input-field col s6">
            <i class="material-icons prefix">date_range</i>
            @Html.LabelFor(model => model.date, "Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
        </div>
        <div class="input-field col s6">
            <i class="material-icons prefix">filter_9_plu</i>
            @Html.LabelFor(model => model.quantity, "cantidad", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })

        </div>
    </div>
    @*-----------------*@
    <div class="row">
        <div class="input-field col s6">
            <i class="material-icons prefix">attach_money</i>
            @Html.LabelFor(model => model.unit_value, "Valor Unidad", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.unit_value, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.unit_value, "", new { @class = "text-danger" })
        </div>
        <div class="input-field col s6">
            <i class="material-icons prefix">attach_money</i>
            @Html.LabelFor(model => model.total, "Total", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.total, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.total, "", new { @class = "text-danger" })
        </div>
    </div>
    @*-----------------------------*@
    <div class="input-field col s6">
        <i class="material-icons prefix">panorama_fish_eye</i>
        <select id="type" name="type">
            <option value="" disabled selected>Elija su opción</option>
            <option value="RESERVADO">Reservado</option>
            <option value="COMPRADO">Comprado</option>
            <option value="CANCELADO">Cancelado</option>
        </select>
        <label>Tipo de documento</label>
    </div>
    <br />
    <div class="row center">
        <div class="col s12 m12 l12">
            <button class="btn waves-effect waves-light" type="submit" name="action">Crear<i class="material-icons right">save</i></button> | @Html.ActionLink("Volver", "Index")
        </div>
    </div>
</div>
}

