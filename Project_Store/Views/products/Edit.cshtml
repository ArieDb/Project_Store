@model Project_Store.Models.product

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>producto</h4>
