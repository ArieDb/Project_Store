@model Project_Store.Models.seller

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vendedor</h4>
    <hr />
    <table>
        <thead>
            <tr>
                <th>Dni</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Html.DisplayFor(model => model.dni)</th>
                <th>@Html.DisplayFor(model => model.name)</th>
                <th>@Html.DisplayFor(model => model.last_name)</th>
                <th>@Html.DisplayFor(model => model.address)</th>
                <th>@Html.DisplayFor(model => model.phone)</th>
                <th>@Html.DisplayFor(model => model.email)</th>
                <th>@Html.DisplayFor(model => model.photo)</th>
            </tr>
        </tbody>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br />
        <div class="row center">
            <div class="col s12 m12 l12">
                <button class="btn waves-effect waves-light center" type="submit" value="Delete">Eliminar<i class="material-icons right">delete</i></button> |
                @Html.ActionLink("Volver a la Lista", "Index")
            </div>
        </div>
    }
</div>
