@model Project_Store.Models.customer

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<div>
    <h4>Cliente</h4>
    <hr />
    <table class="striped">
        <thead>
            <tr>
                <th>TipoId</th>
                <th>Numero</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Ciudad</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Html.DisplayFor(model => model.identification_type)</th>
                <th>@Html.DisplayFor(model => model.document_number)</th>
                <th>@Html.DisplayFor(model => model.name)</th>
                <th>@Html.DisplayFor(model => model.last_name)</th>
                <th>@Html.DisplayNameFor(model => model.address)</th>
                <th>@Html.DisplayFor(model => model.phone)</th>
                <th>@Html.DisplayFor(model => model.email)</th>
                <th>@Html.DisplayFor(model => model.city)</th>
                <th>@Html.DisplayFor(model => model.photo)</th>


            </tr>
        </tbody>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row center">
            <div class="col s12 m12 l12">
                <button class="btn waves-effect waves-light center" type="submit" value="Delete">Eliminar<i class="material-icons right">delete</i></button> |
                @Html.ActionLink("Volver a la Lista", "Index")
            </div>
        </div>
    }
</div>
