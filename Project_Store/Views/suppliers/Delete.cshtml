    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>supplier</h4>
    <hr />
    <table>
        <thead>
            <tr>
                <th>Dni</th>
                <th>Nombre Empresa</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Html.DisplayFor(model => model.dni)</th>
                <th>@Html.DisplayFor(model => model.business_name)</th>
                <th>@Html.DisplayFor(model => model.address)</th>
